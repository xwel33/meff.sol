local settings44 = {
    main33 = {
        DotEnabled = true,
        Prediction = 0.121192,
        Part = "LowerTorso",
        Key = "c",
        Notifications = true,
        AirshotFunc = false
    },
    Dot = {
        Show = true,
        Color = Color3.fromRGB(0, 255, 0),
        Size = Vector3.new(0.9, 2.2, 0.9)
    }
}






local CurrentCamera = game:GetService "Workspace".CurrentCamera
local Mouse = game.Players.LocalPlayer:GetMouse()
local RunService = game:GetService("RunService")
local Plr = game.Players.LocalPlayer

local Part = Instance.new("Part", game.Workspace)
Part.Anchored = true
Part.CanCollide = false
Part.Parent = game.Workspace
Part.Shape = Enum.PartType.Block
Part.Size = settings44.Dot.Size
Part.Color = settings44.Dot.Color

if settings44.Dot.Show == true then
    Part.Transparency = 0
else
    Part.Transparency = 1
end

Mouse.KeyDown:Connect(function(KeyPressed)
    if KeyPressed == (settings44.main33.Key) then
        if settings44.main33.DotEnabled == true then
            settings44.main33.DotEnabled = false
            if settings44.main33.Notifications == true then
                Plr = FindClosestUser()
                game.StarterGui:SetCore("SendNotification", {
                    Title = "Meff.sol HVH",
                    Text = "No longer locked on"
                })
            end
        else
            Plr = FindClosestUser()
            settings44.main33.DotEnabled = true
            if settings44.main33.Notifications == true then
                game.StarterGui:SetCore("SendNotification", {
                    Title = "Meff.sol HVH",
                    Text = "Locked on to:" .. tostring(Plr.Character.Humanoid.DisplayName)
                })
            end
        end
    end
end)

function FindClosestUser()
    local closestPlayer
    local shortestDistance = math.huge

    for i, v in pairs(game.Players:GetPlayers()) do
        if v ~= game.Players.LocalPlayer and v.Character and v.Character:FindFirstChild("Humanoid") and
            v.Character.Humanoid.Health ~= 0 and v.Character:FindFirstChild("HumanoidRootPart") then
            local pos = CurrentCamera:WorldToViewportPoint(v.Character.PrimaryPart.Position)
            local magnitude = (Vector2.new(pos.X, pos.Y) - Vector2.new(Mouse.X, Mouse.Y)).magnitude
            if magnitude < shortestDistance then
                closestPlayer = v
                shortestDistance = magnitude
            end
        end
    end
    return closestPlayer
end

RunService.Stepped:connect(function()
    if settings44.main33.DotEnabled and Plr.Character and Plr.Character:FindFirstChild("LowerTorso") then
        Part.CFrame = CFrame.new(Plr.Character[settings44.main33.Part].Position +
                                     (Plr.Character.LowerTorso.Velocity * settings44.main33.Prediction))
    else
        Part.CFrame = CFrame.new(0, 9999, 0)

    end
end)

local mt = getrawmetatable(game)
local old = mt.__namecall
setreadonly(mt, false)
mt.__namecall = newcclosure(function(...)
    local args = {...}
    if settings44.main33.DotEnabled and getnamecallmethod() == "FireServer" and args[2] == "UpdateMousePos" then
        args[3] = Plr.Character[settings44.main33.Part].Position +
                      (Plr.Character[settings44.main33.Part].Velocity * settings44.main33.Prediction)
        return old(unpack(args))
    end
    return old(...)
end)


if settings44.main33.AirshotFunc == true then
    if Plr.Character.Humanoid.Jump == true and Plr.Character.Humanoid.FloorMaterial == Enum.Material.Air then
        settings44.main33.Part = "RightFoot"
    else
        Plr.Character:WaitForChild("Humanoid").StateChanged:Connect(function(old,new)
            if new == Enum.HumanoidStateType.Freefall then
                settings44.main33.Part = "RightFoot"
            else
                settings44.main33.Part = "LowerTorso"
            end
        end)
    end
end

